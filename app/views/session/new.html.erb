<div class="flex justify-center items-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <% if notice.present? %>
      <p class="mb-5 px-4 py-3 rounded-lg bg-green-100 text-green-700 font-medium border border-green-200">
        <%= notice %>
      </p>
    <% end %>

    <%= form_tag(login_path, method: :post, class: "space-y-6") do %>
      <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Please Log In</h2>

      <div>
        <%= label_tag :name, 'Name', class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag :name, params[:name], class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div>
        <%= label_tag :password, 'Password', class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= password_field_tag :password, params[:password], class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div class="pt-2">
        <%= submit_tag "Login", class: "w-full py-2 px-4 bg-green-600 text-white font-semibold rounded-lg shadow hover:bg-green-700 transition duration-150" %>
      </div>
    <% end %>
  </div>
</div>
