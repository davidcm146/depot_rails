<fieldset data-payment-target="additionalFields" data-type="Credit card">
  <div class="my-5">
    <%= form.label :credit_card_number %>
    <%= form.password_field :credit_card_number, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full input-field" %>
  </div>
  <div class="my-5">
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full input-field", placeholder: "e.g. 03/22" %>
  </div>
</fieldset>
